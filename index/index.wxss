  height: 100%;
  overflow: hidden;
}
.content {
  position: relative;
  width: 100%;
  height: 100%;
}
#canvas {
  width: 100%;
  height: calc(100% - 50px);
  background-color: #f5f6fa;
}
.btn-group {
  width: 100%;
  text-align: center;
}
.btn-text {
  padding: 5px 15px;
  background-color: orange;
  color: #fff;
  border-radius: 4px;
}
.btn-text:last-child {
  margin-left: 15px;
  background-color: green;
}