page{
  height: 100%;
  overflow: hidden;
}
.content {
  position: relative;
  width: 100%;
  height: 100%;
}
#canvas {
  width: calc(100% - 50px);
  height: 100%;
  background-color: #f5f6fa;
}
.flex {
  position: absolute;
  top: 40%;
  right: -50%;
  width: 100%;
  text-align: center;
  padding: 15px;
}
.btn-group {
  position: absolute;
  top: 0;
  right: 40px;
  width: 100vh;
  transform: rotate(-90deg);
  transform-origin: 100% 0;
  text-align: center;
}
.btn-text {
  padding: 5px 15px;
  background-color: orange;
  color: #fff;
  border-radius: 4px;
}
.btn-text:last-child {
  margin-left: 15px;
  background-color: green;
}